# Application
APP_ENV=development
APP_NAME=Smart Research Assistant
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Google Gemini API
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/research_assistant
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_data
CHROMA_COLLECTION_NAME=research_docs

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,txt,md

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT (Optional for MVP)
JWT_SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# RAG Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=10
TOP_K_CONTEXT=5
RELEVANCE_THRESHOLD=0.3

# Gemini Model Configuration
GEMINI_CHAT_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# Conversation Settings
MAX_CONVERSATION_HISTORY=5
